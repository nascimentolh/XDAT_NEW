<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="acmi.l2.clientmod.xdat.scripting.Controller">
    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="header-bar">
        <padding>
            <Insets top="8" right="12" bottom="8" left="12"/>
        </padding>
        <Button mnemonicParsing="false" onAction="#open" text="Open" styleClass="button">
            <tooltip>
                <Tooltip text="Open script file (Ctrl+O)"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#save" text="Save" styleClass="button">
            <tooltip>
                <Tooltip text="Save script (Ctrl+S)"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#saveAs" text="Save As" styleClass="button">
            <tooltip>
                <Tooltip text="Save script as..."/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#execute" text="Execute" styleClass="button, button-primary">
            <tooltip>
                <Tooltip text="Execute script (F5)"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#pasteHistory" text="Paste History" styleClass="button">
            <tooltip>
                <Tooltip text="Paste operation history"/>
            </tooltip>
        </Button>
    </HBox>
    <SplitPane dividerPositions="0.7" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <TextArea fx:id="scriptText" styleClass="script-editor" promptText="// Enter your Groovy script here...">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
        </TextArea>
        <TextArea fx:id="output" editable="false" styleClass="script-output" promptText="Script output will appear here...">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
        </TextArea>
    </SplitPane>
</VBox>
